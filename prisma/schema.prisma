generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model destinations {
  id         Int      @id @default(autoincrement())
  url_maps   String?
  name       String?
  rating     Decimal? @db.Decimal(12, 2)
  tipe       String?
  url_gambar String?
  provinsi   String?
  latitutde  Decimal? @db.Decimal(12, 2)
  longtitude Decimal? @db.Decimal(12, 2)
  kategori   String?
  created_at DateTime @default(now()) @db.Timestamptz(6)
}

model kuliners {
  id         Int      @id @default(autoincrement())
  judul      String?
  deskripsi  String?
  gambar     String?
  tipe       String?
  provinsi   String?
  created_at DateTime @default(now()) @db.Timestamptz(6)
}

model rekomendasi_destinasi {
  id            Int      @id @default(autoincrement())
  user_id       Int
  list_kategori String
  created_at    DateTime @default(now()) @db.Timestamptz(6)
  users         users    @relation(fields: [user_id], references: [id])
}

model users {
  id                    Int                     @id @default(autoincrement())
  name                  String?
  email                 String?
  gender                String?
  password              String?
  created_at            DateTime                @default(now()) @db.Timestamptz(6)
  rekomendasi_destinasi rekomendasi_destinasi[]
}
